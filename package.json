{
  "name": "@linx-systems/pihole-api-client",
  "version": "0.1.0",
  "description": "Type-safe TypeScript client for the Pi-hole v6 REST API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "pihole",
    "pi-hole",
    "dns",
    "api",
    "typescript",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linx-systems/pihole-api.git"
  },
  "homepage": "https://github.com/linx-systems/pihole-api#readme",
  "bugs": {
    "url": "https://github.com/linx-systems/pihole-api/issues"
  },
  "devDependencies": {
    "@types/bun": "^1.1.6",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.54.0"
  }
}
